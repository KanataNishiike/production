・変数
→変数と””がある文では()を使う！
name = "John"
age  = "35"
puts ("There once was a man named " + name)
puts ("he was "+ age +" years old.")
name = "Adam"
age  = "40"
puts ("There once was a man named " + name)
puts ("he was "+ age +" years old.")
=
There once was a man named John
he was 35 years old.
There once was a man named Adam
he was 40 years old.

・改行
puts "Giraffe\nAcademy"
=
Giraffe
Academy

・変数
phrase = "Giraffe Academy"
puts phrase
= Giraffe Academy

・大文字化
phrase = "Giraffe Academy"
puts phrase.upcase()
= GIRAFFE ACADEMY
puts "programming".upcase()
= PROGRAMMING

・小文字化
phrase = "Giraffe Academy"
puts phrase.downcase()
= giraffe academy

・隙間を詰める
phrase = "   Giraffe Academy   "
puts phrase.strip()
= Giraffe Academy

・文字カウント
phrase = "Giraffe Academy"
puts phrase.length()
= 15

・判定
phrase = "Giraffe Academy"
puts phrase.include? "Academy"
= True
phrase = "Giraffe Academy"
puts phrase.include? "Academys"
= False

・文字の配列
phrase = "Giraffe Academy"
puts phrase[0]
= G
phrase = "Giraffe Academy"
puts phrase[0,3]
= Gir

・文字の番号
phrase = "Giraffe Academy"
puts phrase.index("a")
= 3
phrase = "Giraffe Academy"
puts phrase.index("ffe")
= 4   開始する番号を返す

